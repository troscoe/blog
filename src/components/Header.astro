---
const navLinks = [
  { href: '/blog/', text: 'Home' },
  { href: '/blog/blog/', text: 'Blog' },
  { href: '/blog/about/', text: 'About' },
];
---

<header class="border-b">
  <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/blog/" class="text-xl font-bold hover:text-primary transition-colors">
      Blog
    </a>
    <ul class="flex gap-6">
      {
        navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="hover:text-primary transition-colors"
            >
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
