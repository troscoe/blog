---
const navLinks = [
  { href: '/blog/', text: 'Home' },
  { href: '/blog/blog/', text: 'Blog' },
  { href: '/blog/about/', text: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="border-b" role="banner">
  <nav
    class="container mx-auto px-4 py-4 flex items-center justify-between flex-wrap gap-4"
    aria-label="Main navigation"
  >
    <a
      href="/blog/"
      class="text-xl font-bold hover:text-primary transition-colors"
      aria-label="Home"
    >
      Blog
    </a>

    <!-- Desktop Navigation -->
    <ul class="flex gap-6" role="list">
      {
        navLinks.map((link) => {
          const isActive = currentPath === link.href ||
            (link.href !== '/blog/' && currentPath.startsWith(link.href));

          return (
            <li>
              <a
                href={link.href}
                class:list={[
                  'hover:text-primary transition-colors',
                  { 'text-primary font-medium': isActive }
                ]}
                aria-current={isActive ? 'page' : undefined}
              >
                {link.text}
              </a>
            </li>
          );
        })
      }
    </ul>
  </nav>
</header>
